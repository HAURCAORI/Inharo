<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="Yu Gothic" />
    </Style>


    <Style x:Key="StyleGrid">
        <Setter Property="Grid.Background">
            <Setter.Value>
                <SolidColorBrush Color="#FF161616"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- 색상 정의-->
    <LinearGradientBrush x:Key="ColorBackGround" EndPoint="0,1">
        <GradientStop Color="#FF272729" Offset="0"/>
        <GradientStop Color="#FF161517" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ColorSelected" Color="#FF515151"/>
    <SolidColorBrush x:Key="ColorObject" Color="#FF313131"/>
    <SolidColorBrush x:Key="ColorBorder" Color="#FF797979"/>
</ResourceDictionary>